<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookurbook">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BookUrBook"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookUrBook">
        <activity android:name=".RegisterActivity"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".VerificationActivity"></activity>
        <activity android:name=".MainMenuActivity"></activity>
        <activity android:name=".SettingsActivity"></activity>
        <activity android:name=".PostListActivity"></activity>
        <activity android:name=".WishlistActivity"></activity>
        <activity android:name=".ForgottenPasswordActivity"></activity>
        <activity android:name=".MyPostsActivity"></activity>
        <activity android:name=".MyChatsActivity"></activity>



        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>