<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookurbook">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="BookUrBook"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookUrBook">
        <activity android:name=".RegisterActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".VerificationActivity" />
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".PostListActivity" />
        <activity android:name=".WishlistActivity" />
        <activity android:name=".ForgottenPasswordActivity" />
        <activity android:name=".MyPostsActivity" />
        <activity android:name=".MyChatsActivity" />
        <activity android:name=".CreatePostActivity" />
        <activity android:name=".EditPostActivity" />
        <activity android:name=".PostActivity" />
        <activity android:name=".MyBlockListActivity" />
        <activity android:name=".ChatActivity" />
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>